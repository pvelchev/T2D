<?xml version='1.0' encoding='utf-8'?>
<widget 
	id = "com.example.hello" 
	version ="0.0.1" 
	xmlns     = "http://www.w3.org/ns/widgets" 
	xmlns:cdv = "http://cordova.apache.org/ns/1.0"
	xmlns:gap = "http://phonegap.com/ns/1.0"
>
<name>Take Me To Diner</name>
<description>
	Mobile app for Take Me to dinner site.
</description>
<author email="dev@cordova.apache.org" href="http://cordova.io">
	Kenobisoft
</author>
<icon src="www/img/logo.png" />
<gap:splash src="splash.png" />
<gap:splash src="splash.9.png" gap:platform="android" gap:density="ldpi" />
<gap:splash src="splash.9.png" gap:platform="android" gap:density="mdpi" />
<gap:splash src="splash.9.png" gap:platform="android" gap:density="hdpi" />
<content src="index.html" />
<!-- Do not auto hide splash on iOS -->
<preference name="AutoHideSplashScreen" value="false" />
<!-- Do not auto hide splash on Android -->
<preference name="SplashScreenDelay" value="10000"/>

<gap:config-file platform="android" parent="/manifest">
	<application android:theme="@android:style/Theme.NoTitleBar"></application>
</gap:config-file>

<preference name="SplashScreenDelay" value="5000"/>
<preference name="FullScreen" value="true" />
<plugin name="cordova-plugin-whitelist" version="1" />

<preference name="disallowOverscroll" value="true" />
<preference name="webviewbounce" value="false" />
<preference name="exitOnSuspend" value="true" />
<preference name="KeepRunning" value="false" />

<access origin="*" />
<allow-intent href="http://*/*" />
<allow-intent href="https://*/*" />
<allow-intent href="tel:*" />
<allow-intent href="sms:*" />
<allow-intent href="mailto:*" />
<allow-intent href="geo:*" />

<platform name="android">
	<allow-intent href="market:*" />
</platform>
<platform name="ios">
	<allow-intent href="itms:*" />
	<allow-intent href="itms-apps:*" />
</platform>
</widget>